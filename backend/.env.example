# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
# For local development without Docker
MONGODB_URI=mongodb://localhost:27017/document-manager
# For Docker development
# MONGODB_URI=mongodb://mongodb:27017/document-manager
# For production with authentication
# MONGODB_URI=mongodb://username:password@hostname:27017/document-manager

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=30d

# Azure Storage Configuration
# You need to provide your actual Azure Storage credentials here
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=uploads
AZURE_ACCOUNT_NAME=yourstorageaccount
AZURE_ACCOUNT_KEY=youraccountkey

# Admin User Configuration
ADMIN_NAME=Admin User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
